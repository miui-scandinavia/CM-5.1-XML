<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Calculator.Display" parent="@android:style/Widget.Holo.EditText">
        <item name="android:textSize">@dimen/display_text_size</item>
        <item name="android:gravity">center|right</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scrollbars">none</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="HistoryText">
        <item name="android:textSize">@dimen/history_text_size</item>
        <item name="android:textColor">@color/history_result</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="HistoryText.Result" parent="@style/HistoryText">
        <item name="android:textColor">@color/display_formula_text_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Theme.Calculator.ButtonStyle.Widget" parent="@style/Theme.Calculator.ButtonStyle">
        <item name="android:background">@drawable/circle_bg</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="Theme.Calculator.ButtonStyle.FloatingCalc" parent="@style/Theme.Calculator.ButtonStyle">
        <item name="android:textSize">20.0sp</item>
        <item name="android:background">@drawable/circle_bg</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="PadButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/pad_button_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/pad_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
</resources>
